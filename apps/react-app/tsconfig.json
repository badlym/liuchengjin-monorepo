{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@liuchengjin/ts-config/react.json",
  "compilerOptions": {
    "jsx": "preserve", // 允许编译js
    "baseUrl": ".",

    "moduleResolution": "node",
    "paths": {
      "/@/*": ["src/*"],
      "/#/*": ["types/*"],
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    },
    "types": ["vite/client"],
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": false
  },

  "include": [
    "./src/**/*.ts",
    "src/**/*.d.ts",
    "./src/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist", "public"]
}
