{
  "name": "strawberry-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "clean:root": " rimraf node_modules",
    "commit": "czg",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "turbo run stub",
    "lint": "turbo run lint",
    "lint-staged": "pnpm exec lint-staged",
    "prepare": "husky install",
    "ncu": "turbo run ncu",
    "ncu-root:update": "ncu -u",
    "ncu:root": "ncu ",
    "ncu:update": "turbo run ncu:update"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@strawberry/eslint-config": "workspace:^",
    "@strawberry/lint-staged-config": "workspace:^",
    "@strawberry/prettier-config": "workspace:^",
    "@strawberry/ts-config": "workspace:^",
    "cz-git": "^1.7.1",
    "czg": "^1.7.1",
    "husky": "^8.0.3",
    "lint-staged": "15.1.0"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.16",
    "@types/node": "^20.9.0",
    "turbo": "latest",
    "unbuild": "^2.0.0"
  },
  "packageManager": "pnpm@8.6.10"
}
